#! /bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no
includedir=@includedir@
libdir=@libdir@

usage()
{
	cat <<EOF
Usage: glib-config [OPTIONS]
Options:
	[--prefix[=DIR]]	change log4cpp prefix [default $prefix]
	[--exec-prefix[=DIR]]	change log4cpp executable prefix [default $exec_prefix]
	[--version]		output version information
	[--libs]		print library linking information
	[--cflags]		print pre-processor and compiler flags
EOF
	exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @VERSION@
      exit 0
      ;;
    --cflags)
      if test "$includedir" != /usr/include; then
        includes="-I$includedir"
      fi
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    glib)
      lib_glib=yes
      ;;
    gmodule)
      lib_gmodule=yes
      ;;
    gthread)
      lib_gthread=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_cflags" = "yes"; then
	cflags=""
	echo $cflags $includes
fi
if test "$echo_libs" = "yes"; then
	libs="-llog4cpp"
	echo -L$libdir $libs
fi
